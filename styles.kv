# styles.kv

<MyNavigationApp>:
    header_color: 1, 1, 1, 1  # White
    button_color: 0.2, 0.6, 0.8, 1  # Blue
    label_color: 0, 0, 0, 1  # Black
    background_color: 1, 1, 1, 1  # White
    navigation_height: '50dp'  # Height for navigation buttons

<Header@BoxLayout>:
    canvas.before:
        Color:
            rgba: self.parent.header_color
        Rectangle:
            pos: self.pos
            size: self.size

<Button>:
    background_color: self.parent.button_color
    color: self.parent.label_color  # Text color
    size_hint_y: None
    height: self.parent.navigation_height

<Label>:
    color: self.parent.label_color  # Text color

<NavigationButtons@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: self.parent.navigation_height
    canvas.before:
        Color:
            rgba: self.parent.background_color
        Rectangle:
            pos: self.pos
            size: self.size
